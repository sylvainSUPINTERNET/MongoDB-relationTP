extend _master

block content
    <p>#{nom}</p>

    <h1>Liste des commandes</h1>
    <hr>
    <p>Vous êtes ici : <a href="/" title="Retour à la liste des commandes">Liste des commandes</a></p>
    <hr>

    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date de la commande</th>
                <th>Client</th>
                <th>Nombre de produits</th>
            </tr>
        </thead>
        <tbody>
            each order in orders
                <tr>
                    <td width="25%">
                        <a href="/order/#{order._id}">
                            | #{order._id}
                        </a>
                    </td>
                    <td width="25%">
                            | #{order.dateOrdered}
                    </td>
                    <td width="25%">
                            | #{order.customer.firstname} #{order.customer.lastname}
                    </td>
                    <td width="25%">
                            | #{order.products.length}
                    </td>
                </tr>
        </tbody>
    </table>

